{% macro sidemenu(user) %}
	{% if user %}
		<style>{% include 'components/sidemenu/logged-in.css' %}</style>
		<div class="menu">
			<div class="menu1">
				<div class="img">
					<img id="foto" src="{{ user.image }}" height="200" width="200"/>
				</div>
				<div class="NomePerfil">
					<label id="lbl">{{ user.name }}</label>
				</div>

			</div>

			<nav class="menu2">
				<ul style="list-style-type: none;">
					<li id="alterar_senha">
						<a href="/alterarsenha"><img id="image1" src="/img/AlterarSenha.png   " width="50px" height="50px">
							Alterar Senha</a>
					</li>
					<li id="editar_cadastro">
						<a href=""><img id="image2" src="/img/EditarCadastro.png   " width="50px" height="50px">
							Editar Cadastro</a>
					</li>
					<li id="cadastrar_pet">
						<a href=""><img id="image3" src="/img/CadastrarPet.png  " width="50px" height="50px">
							Cadastrar Pet</a>
					</li>
					<li id="cadastrar_pagamento">
						<a href=""><img id="image4" src="/img/CadastrarPagamento.png  " width="50px" height="50px">Cadastrar Meio de Pagamento</a>
					</li>

				</ul>

			</nav>
			<div class="menu3">
				<div class="menu3-1">
					<button class="BtEntrar" onclick="window.location.assign('/logout')">Sair</button>
				</div>
				<div class="menu3-2">
					<img id="image5" src="/img/Pet.png" width="200px" height="200px">
				</div>

			</div>
		</div>
	{% else %}
		<style>{% include "components/sidemenu/logged-out.css" %}</style>
		<div class="menu">
			<div class="menu1">
				<br>
				Bem Vindo de Volta!<br>
				<form action="/login" method="POST">
					<input type="email" name="email" placeholder="E-Mail">
					<br>
					<input type="password" name="password" placeholder="Senha">
					<br><br><button type="submit" class="BtEntrar">Entrar</button>
				</form>

			</div>
			
			<div class="menu2">
				<form action="/cadastrocliente" method="GET">			
					<br>Ainda NÃ£o Sou Cadastrado.
					<br><br><button type = "submit"  class="BtCadastrar">Cadastrar</button>
				</form>
			</div>
			<div class="menu3">
				<br>Esqueci Minha Senha.
				<br><br><button class="BtSenha">Nova Senha</button>
			</div>
		</div>
	{% endif %}
{% endmacro %}
